	    <!-- connection url -->
	    <property name="url" value="jdbc:Altibase://192.168.13.203:20300/mydb" />
	    <!-- DB 사용자 계정 설정 -->
	    <property name="username" value="IXTCS" />
	    <!-- DB 사용자 패스워드 설정 -->
	    <property name="password" value="ixtcs03" />
	</bean>
</beans>
